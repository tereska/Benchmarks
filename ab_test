#!/bin/bash

sum=0
count=100
min=99999999
max=0


for (( i=0;i<$count;i++)); do
  result=`taskset -c 7 ab -q -n10000 -c100 http://localhost:8080/ | grep "Requests per second" | grep -o -P "[0-9\.]+" | tr . .`
  echo -n "$result "
  sum=`echo $sum+$result | bc`

  resultint=`echo $result | tr . " " | awk {'print $1'}`
  if [ $resultint -gt $max ]; then
    max=$resultint
  fi

  if [ $resultint -lt $min ]; then
    min=$resultint
  fi
  

done


result=`echo $sum/$count | bc`
echo -e "\nmin=$min avg=$result max=$max"

